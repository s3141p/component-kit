{
  "version": 1,
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "defaultProject": "devkit",
  "schematics": {
    "@nrwl/angular": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    },
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    }
  },
  "projects": {
    "components": {
      "projectType": "library",
      "root": "libs/components",
      "sourceRoot": "libs/components/src",
      "prefix": "devkit",
      "architect": {
        "build": {
          "builder": "@nrwl/angular:package",
          "options": {
            "project": "libs/components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "libs/components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "libs/components/src/**/*.ts",
              "libs/components/src/**/*.html"
            ]
          }
        }
      }
    },
    "builders": {
      "root": "libs/builders",
      "sourceRoot": "libs/builders/src",
      "projectType": "library",
      "architect": {
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["libs/builders/**/*.ts"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/builders"],
          "options": {
            "jestConfig": "libs/builders/jest.config.js",
            "passWithNoTests": true
          }
        },
        "build": {
          "builder": "@nrwl/node:package",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/libs/builders",
            "tsConfig": "libs/builders/tsconfig.lib.json",
            "packageJson": "libs/builders/package.json",
            "main": "libs/builders/src/index.ts",
            "assets": [
              "libs/builders/*.md",
              {
                "input": "./libs/builders/src",
                "glob": "**/!(*.ts)",
                "output": "./src"
              },
              {
                "input": "./libs/builders/src",
                "glob": "**/*.d.ts",
                "output": "./src"
              },
              {
                "input": "./libs/builders",
                "glob": "builders.json",
                "output": "."
              }
            ]
          }
        }
      }
    },
    "examples-material": {
      "projectType": "library",
      "root": "libs/examples-material",
      "sourceRoot": "libs/examples-material/src",
      "prefix": "devkit",
      "architect": {
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "libs/examples-material/src/**/*.ts",
              "libs/examples-material/src/**/*.html"
            ]
          }
        }
      }
    },
    "devkit": {
      "projectType": "application",
      "root": "apps/devkit",
      "sourceRoot": "apps/devkit/src",
      "prefix": "devkit",
      "architect": {
        "build": {
          "builder": "./dist/libs/builders:build",
          "options": {
            "aot": true,
            "outputPath": "dist/apps/devkit",
            "index": "apps/devkit/src/index.html",
            "main": "apps/devkit/src/main.ts",
            "polyfills": "apps/devkit/src/polyfills.ts",
            "tsConfig": "apps/devkit/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["apps/devkit/src/favicon.ico", "apps/devkit/src/assets"],
            "styles": [
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "apps/devkit/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "apps/devkit/src/environments/environment.ts",
                  "with": "apps/devkit/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "devkit:build"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/devkit/src/**/*.ts",
              "apps/devkit/src/**/*.html"
            ]
          }
        },
        "serve": {
          "builder": "./dist/libs/builders:serve",
          "configurations": {
            "development": {
              "browserTarget": "devkit:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  }
}
